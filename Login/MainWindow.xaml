<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
    Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="Register" Content="Register" HorizontalAlignment="Left" Margin="152,232,0,0" VerticalAlignment="Top" Width="75" Click="Register_Click"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="31" Margin="175,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="31" Margin="175,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127"/>
        <TextBlock x:Name="Password" HorizontalAlignment="Left" Height="31" Margin="36,141,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="105"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Height="31" Margin="36,85,0,0" TextWrapping="Wrap" Text="UserEmail" VerticalAlignment="Top" Width="105"/>
        <Button x:Name="Login" Content="Login" HorizontalAlignment="Left" Margin="260,232,0,0" VerticalAlignment="Top" Width="75" Click="Login_Click"/>

    </Grid>
</Window>
